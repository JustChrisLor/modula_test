<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bras de Fer Bordeaux</title>
    <link rel="icon" type="image/png" href="{{ asset('assets/img/bras-fer-logo.png') }}"/>
    {# BOOTSTRAP #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    {#  Font Awesome #}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/accueil.css') }}">
    {% block stylesheets %}
    {% endblock %}
</head>
<body class="wrapper">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand col-md-1 col-2" href="{{ path('accueil') }}">
            <img class="img-fluid" src="{{ asset('assets/img/bras-fer-logo.png') }}" alt="Bras de fer de Bordeaux"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse col-md-3 offset-7" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link text-warning text-center" href="{{ path('admin_liste_message') }}">Messages reçus</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link text-danger text-center" href="{{ path('logout') }}">Se déconnecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                            <a href="{{ path('admin_dashboard') }}" class="nav-link btn btn-outline-warning text-warning">Admin</a>

                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>

<main>
    {% block main %}
    {% endblock %}
</main>

<!-- Footer -->
<footer class="page-footer font-small bg-warning pt-4">
    <!-- Footer Links -->
    <div class="container-fluid text-center text-md-left">
        <!-- Grid row -->
        <div class="row">
            <!-- Grid column -->
            <div class="col-md-6 mt-md-0 mt-3 pb-3 row ml-0 mr-0 pl-0 pr-0">
                <!-- Content -->
                <div class="col-md-3 offset-md-0 col-4 offset-4"><img src="{{ asset('assets/img/bras-fer-logo.png') }}"
                                                                      alt="Bras de fer Bordelais"
                                                                      class="img-fluid"/></div>
                <h5 class="text-light footer-title text-center">Club de Bras de Fer Bordelais</h5>

            </div>
            <!-- Grid column -->

            <hr class="clearfix w-100 d-md-none pb-3">

            <!-- Grid column -->
            <div class="col-md-3 mb-md-0 mb-3">

                <!-- Links -->
                <h5 class="text-uppercase"><a href="{{ path('accueil') }}" class="text-dark">Accueil</a></h5>

                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('contact') }}" class="text-dark">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- Grid column -->
            <!-- Grid column -->
            <div class="col-md-3 mb-md-0 mb-3">
                <!-- Links -->
                {% if is_granted('ROLE_ADMIN') %}
                    <h5 class="text-uppercase">
                        <a href="{{ path('logout') }}" class="text-dark">Se déconnecter</a>
                    </h5>
                {% else %}
                    <h5 class="text-uppercase">
                        <a href="{{ path('login') }}" class="text-dark">Admin</a>
                    </h5>
                {% endif %}
                <ul class="list-unstyled">
                    <li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_liste_message') }}" class="text-dark">Messages reçus</a>
                        {% endif %}
                    </li>
                </ul>

            </div>
            <!-- Grid column -->
        </div>
        <!-- Grid row -->
    </div>
    <!-- Footer Links -->

    <!-- Copyright -->
    <div class="footer-copyright text-center py-2 text-dark bg-light">© 2020 Copyright:
        <a href="#" class="text-dark"> Bras-de-fer-bordeaux.com</a>
    </div>
    <!-- Copyright -->

</footer>
<!-- Footer -->

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
{# CDN popper (bootstrap)#}
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
{# CDN BOOTSTRAP#}
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

{% block javascripts %}
{% endblock %}
</body>
</html>