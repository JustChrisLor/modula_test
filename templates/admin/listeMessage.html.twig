{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center mt-4 mb-2">
            <h1>Liste des Messages</h1>
        </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center mb-2"><a class="btn btn-warning" href="{{ path('admin_dashboard')}}">Retour au dashboard</a></div>

    <div class="content">
        <div class="container">
            <div class="row">
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Date et Heure</th>
                        <th scope="col">Message</th>
                        <th scope="col">DÃ©tails</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.createdAt|date("m/d/Y H:i") }}</td>
                            <td>{{ message.text }}</td>
                            <td><a href="{{ path('admin_liste_message_show', { 'id': message.id }) }}"
                                   class="btn btn-warning mb-2"><i class="fas fa-info-circle"></i>Voir</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



{% block javascripts %}
    {{ parent() }}
{% endblock %}